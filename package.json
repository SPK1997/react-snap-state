{
  "name": "react-snap-state",
  "type": "module",
  "version": "0.4.5",
  "description": "Lighweight state management using keys in react",
  "main": "dist/main.bundle.cjs.js",
  "module": "dist/main.bundle.mjs",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/main.bundle.mjs",
      "require": "./dist/main.bundle.cjs.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "author": "SPK1997",
  "repository": {
    "type": "git",
    "url": "https://github.com/SPK1997/react-snap-state"
  },
  "bugs": {
    "url": "https://github.com/SPK1997/react-snap-state/issues"
  },
  "homepage": "https://github.com/SPK1997/react-snap-state#readme",
  "sideEffects": "false",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "types": "tsc -p tsconfig.json",
    "build": "npm run clean && npm run types && webpack --config webpack.config.js",
    "release:patch": "npm run build && npm version patch && npm publish",
    "release:minor": "npm run build && npm version minor && npm publish",
    "release:major": "npm run build && npm version major && npm publish"
  },
  "keywords": [
    "react",
    "state-management",
    "store",
    "useSyncExternalStore"
  ],
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@types/react": "^19.2.2",
    "@types/use-sync-external-store": "^1.5.0",
    "babel-loader": "^10.0.0",
    "rimraf": "^6.1.0",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1"
  },
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0 || ^19.0.0",
    "react-dom": "^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "optionalDependencies": {
    "use-sync-external-store": "^1.6.0"
  }
}
