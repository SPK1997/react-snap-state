{
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["ES2020", "DOM"],
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "noEmit": false,
    "skipLibCheck": true,
    "outDir": "dist/types",
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
  },
  "include": ["src", "**/*.ts", "**/*.tsx"],
  "exclude": ["dist","node_modules"]
}
